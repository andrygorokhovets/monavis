.page-line.col-md-12.interior-carousel
    .page-container.pull-left
        .page-heading
            - if(!empty($carousel_title)):
            h3
                - print($carousel_title);
            - endif;
            - if(!empty($button_text)):
            .btn-container.page-heading-order
                - if(substr($button_link, 0, 1) == '#'):
                a.btn.btn-primary(data-toggle="modal", data-target!="<?php print($button_link); ?>")
                    span
                        - print($button_text);
                    i.fa.fa-chevron-circle-right
                - else:
                a.btn.btn-primary(href!='<?php print($button_link); ?>')
                    span
                        - print($button_text);
                    i.fa.fa-chevron-circle-right
                - endif;
            - endif;
        .page-content.pull-left
            .page-text
                .carousel.carousel-block
                    .carousel-frame
                        ul.carousel-slider
                            - while (have_posts()):
                            - the_post();
                            - $image_id = get_post_thumbnail_id();
                            - $image_src = getImage('interior', '260x150', $image_id);
                            li.carousel-slide
                                .carousel-slide-container
                                    img.img-responsive(src!="<?php print($image_src); ?>", alt!="<?php print(get_the_title()); ?>")
                                    a.carousel-slide-info(href!="<?php print(get_the_permalink()); ?>")
                                        span
                                            - print(get_the_title());
                            - endwhile;